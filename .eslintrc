{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "node": true,
        "mocha": true
    },
    "ecmaFeatures": {
        "jsx": true,
        "modules": true
    },
    "globals": {
        "expect": true,
        "fixture": true,
        "sinon": true
    },
    "rules": {
        "brace-style": 2,
        "guard-for-in": 2,
        "global-strict": 0,
        "indent": 2,
        "max-len": [1, 100],
        "new-cap": 0,
        "no-comma-dangle": 2,
        "no-func-assign": 0,
        "no-lonely-if": 2,
        "no-multiple-empty-lines": 2,
        "no-nested-ternary": 2,
        "no-new": 0,
        "no-reserved-keys": 2,
        "no-shadow": 0,
        "no-underscore-dangle": 0,
        "no-unused-expressions": 0,
        "quotes": [2, "single", "avoid-escape"],
        "space-after-keywords": 2,
        "space-before-blocks": 2,
        "space-before-function-parentheses": { "anonymous": "always", "named": "never" },
        "strict": [2, "global"]
    }
}
